<head>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<div class="container mt-4">
  <h3>Messages Reçus</h3>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Nom et Prénom</th>
          <th>Email</th>
          <th>Téléphone</th>
          <th>Objet</th>
          <th>Message</th>
          <th>Reçu le</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.reverse.each do |contact| %>
          <% email = contact.email.size > 15 ? "#{contact.email.slice(0, 15)}.." : contact.email %>
          <% subject = contact.subject.size > 20 ? "#{contact.subject.slice(0, 20)}.." : contact.subject %>
          <% message = contact.message.size > 50 ? "#{contact.message.slice(0, 50)}..." : contact.message %>
          <tr>
            <td><%= contact.full_name %></td>
            <td><%= email %></td>
            <td><%= contact.phone %></td>
            <td><%= subject %></td>
            <td style="max-width: 300px; overflow-wrap: break-word;"><%= message %></td>
            <td><%= contact.created_at.strftime("%B %d, %Y %H:%M") %></td>
            <td>
              <%= button_to 'Delete', contact_path(contact), method: :delete, data: { confirm: 'Are you sure you want to permanently delete this message?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
