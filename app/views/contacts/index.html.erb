<div class="container mt-4">
  <h1>Messages Re√ßus</h1>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Full Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Subject</th>
          <th>Message</th>
          <th>Sent At</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.reverse.each do |contact| %>
          <tr>
            <td><%= contact.full_name %></td>
            <td><%= contact.email %></td>
            <td><%= contact.phone %></td>
            <td><%= contact.subject %></td>
            <td style="max-width: 300px; overflow-wrap: break-word;"><%= contact.message %></td>
            <td><%= contact.created_at.strftime("%B %d, %Y %H:%M") %></td>
            <td>
              <%= button_to 'Delete', contact_path(contact), method: :delete, data: { confirm: 'Are you sure you want to permanently delete this message?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
