<thead>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</thead>

<div class="container mt-4">
  <h3>Messages Reçus</h3>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tr>
          <th>Nom et Prénom</th>
          <th>Email</th>
          <th>Téléphone</th>
          <th>Objet</th>
          <th>Message</th>
          <th>Reçu le</th>
          <th>Action</th>
        </tr>
      <tbody>
        <% @contacts.reverse.each do |contact| %>
          <tr>
            <td><%= contact.full_name %></td>
            <td><%= contact.email %></td>
            <td><%= contact.phone %></td>
            <td><%= contact.subject %></td>
            <td style="max-width: 300px; overflow-wrap: break-word;"><%= contact.message %></td>
            <td><%= contact.created_at.strftime("%B %d, %Y %H:%M") %></td>
            <td>
              <%= button_to 'Delete', contact_path(contact), method: :delete, data: { confirm: 'Are you sure you want to permanently delete this message?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
