{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", 
    "typeRoots": ["node_modules/@types", "types"],
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": [
    "src",
    "types"
  ]
}
